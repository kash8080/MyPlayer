<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="horizontal"
    android:id="@+id/backgroundcolour"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:paddingTop="5dp"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackground"
    android:foreground="?android:attr/selectableItemBackground"

    >

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:id="@+id/songs_image"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:orientation="vertical"
        android:layout_weight="1"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:textSize="13sp"
            android:textColor="@color/colorPrimaryText"
            android:id="@+id/songs_name"
            android:transitionName="transitionName"
            android:maxLines="1"
            />
        <!--333333-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="12sp"
            android:textColor="@color/colorSecondaryText"
            android:maxLines="1"
            android:id="@+id/songs_artist"
            />

    </LinearLayout>



        <LinearLayout
    android:layout_width="wrap_content"
    android:orientation="horizontal"
    android:layout_height="60dp"
    android:layout_gravity="right"
    android:background="#00ffffff"
    >

    <FrameLayout
        android:layout_width="20dp"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:id="@+id/giff_pause"
            android:layout_marginBottom="5dp"
            android:visibility="invisible"
            android:background="@drawable/equaliser"

            />
        <pl.droidsonroids.gif.GifTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:id="@+id/giff_id"
            android:layout_marginBottom="5dp"
            android:background="@drawable/giff"
            />
    </FrameLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/options"
        android:id="@+id/options"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingEnd="3dp"
        android:paddingRight="3dp"
        android:background="#00ffffff"
        />
        <View
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="#00ffffff"

            >

        </View>
</LinearLayout>
    </FrameLayout>
</LinearLayout>