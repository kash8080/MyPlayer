<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>

        <!--  It should be true otherwise action mode will not overlay toolbar -->
        <item name="windowActionModeOverlay">true</item>
        
        <!--  For Custom Action Mode Background Color/Drawable -->
        <item name="actionModeBackground">@color/colorPrimaryLight</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="AppTheme.Purple">
        <item name="colorPrimary">@color/colorPrimarypurple</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkpurple</item>
        <item name="colorAccent">@color/colorAccentpurple</item>
        <item name="actionModeBackground">@color/colorPrimaryLightpurple</item>

    </style>

    <style name="AppTheme.Red">
        <item name="colorPrimary">@color/colorPrimaryred</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkred</item>
        <item name="colorAccent">@color/colorAccentred</item>
        <item name="actionModeBackground">@color/colorPrimaryLightred</item>

    </style>

    <style name="AppTheme.orange">
        <item name="colorPrimary">@color/colorPrimaryorange</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkorange</item>
        <item name="colorAccent">@color/colorAccentorange</item>
        <item name="actionModeBackground">@color/colorPrimaryLightorange</item>

    </style>
    <style name="AppTheme.indigo">
        <item name="colorPrimary">@color/colorPrimaryindigo</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkindigo</item>
        <item name="colorAccent">@color/colorAccentindigo</item>
        <item name="actionModeBackground">@color/colorPrimaryLightindigo</item>

    </style>
    <style name="AppTheme.brown">
        <item name="colorPrimary">@color/colorPrimarybrown</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkbrown</item>
        <item name="colorAccent">@color/colorAccentbrown</item>
        <item name="actionModeBackground">@color/colorPrimaryLightbrown</item>

    </style>
    <style name="AppTheme.night">
        <item name="colorPrimary">@color/colorPrimarynight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarknight</item>
        <item name="colorAccent">@color/colorAccentnight</item>
        <item name="actionModeBackground">@color/colorPrimaryLightnight</item>

    </style>
    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">

        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">15dp</item>
        <item name="tabPaddingEnd">15dp</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">#ffffff</item>
    </style>

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#aaaaaa</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:dropDownItemStyle">@style/myDropDownItemStyle</item>
        <item name="android:dropDownListViewStyle">@style/myDropDownListViewStyle</item>

    </style>


    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="myDropDownItemStyle" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="myDropDownListViewStyle" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:background">#FFF</item>
    </style>
</resources>
